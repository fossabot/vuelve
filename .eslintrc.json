{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/babel",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard",
    "prettier/unicorn",
    "prettier/vue"
  ],
  "globals": {
    "vue": "readonly"
  },
  "rules": {
    "eqeqeq": "off",
    "import/no-unresolved": ["error", { "ignore": ["vue"] }]
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
